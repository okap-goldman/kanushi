{
  "name": "kuripura",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "nest build",
    "dev:mobile": "yarn workspace @kuripura/mobile dev",
    "dev:server": "yarn workspace @kuripura/server start:dev",
    "docker:up": "docker-compose -f docker/compose/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/compose/docker-compose.yml down",
    "docker:build": "docker-compose -f docker/compose/docker-compose.yml build",
    "start:dev": "nest start --watch"
  },
  "workspaces": [
    "packages/*",
    "server",
    "mobile"
  ]
}
