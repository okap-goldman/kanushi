{
  "name": "kuripura",
  "private": true,
  "workspaces": [
    "mobile",
    "server",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start -w mobile",
    "server": "npm run start:dev -w server",
    "build": "npm run build -w packages/shared && npm run build -w server",
    "dev": "concurrently \"npm run mobile\" \"npm run server\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.3"
  }
}
