generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  name            String
  followers       Follow[]  @relation("FollowerToUser")
  following       Follow[]  @relation("UserToFollowee")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Follow {
  id          Int       @id @default(autoincrement()) @map("follow_id")
  follower    User      @relation("FollowerToUser", fields: [followerId], references: [id])
  followerId  Int       @map("follower_id")
  followee    User      @relation("UserToFollowee", fields: [followeeId], references: [id])
  followeeId  Int       @map("followee_id")
  followType  String    @map("follow_type")
  reason      String?
  createdAt   DateTime  @default(now()) @map("created_at")

  @@map("follows")
}

model UnfollowLog {
  id          Int       @id @default(autoincrement())
  followId    Int       @map("follow_id")
  reason      String
  createdAt   DateTime  @default(now()) @map("created_at")

  @@map("unfollow_logs")
}
